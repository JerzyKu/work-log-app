<div class="section">
    <div class="label">Query</div>
    <form action="/history" method="GET">
        <select name="companyName">
            <option value="">All</option>
            <% companys.forEach(e=> { %>
                <% if (e.id == searchOptions.companyName) { %>
                    <option selected value="<%= e.id %>"><%= e.companyName %></option>
                <% } else { %>
                    <option value="<%= e.id %>"><%= e.companyName %></option>
                <% }%>
            <% }) %>
        </select>
        <div>
            <label for="endedAfter">After</label>
            <input type="date" name="endedAfter" id="endedAfter" value="<%= searchOptions.endedAfter %>">
        </div>
        <div>
            <label>Before</label>
            <input type="date" name="endedBefore" value="<%= searchOptions.endedBefore %>">
        </div>
        <button type="submit">Search</button>
    </form>
</div>



<div class="section">
    <div class="label">History</div>
    <%- include('../partials/history_table', {tasks: tasks}) %> 

</div>
